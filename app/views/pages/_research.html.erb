<section class="hero">
  <div class="container text-center">
        <h2 class="hero-title">Trouvez la voiture qu'il vous faut</h2>
        <p class="hero-description hidden-xs">La location de voiture au Maroc n'a jamais été aussi simple!</p>
        <div class="row hero-search-box">
        <%= form_tag search_path, method: :get do %>
                <div class="col-md-4 col-sm-4 search-input">
                    <%= text_field_tag :search, params[:search], placeholder: "Votre déstination?", class: "form-control  input-lg search-first", name: "search", id: "query" %>
                </div>
                <div class="col-md-4 col-sm-4 search-input">
                            <%= text_field_tag :start_date, params[:start_date], placeholder: "Du", class: "form-control input-lg search-first" %>
                </div>
                <div class="col-md-4 col-sm-4 search-input">
                            <%= text_field_tag :end_date, params[:end_date], placeholder: "Au", class: "form-control input-lg search-first" %>
                </div>
                <div class="col-md-4 col-sm-4 search-input">
                </div>
                <div class="col-md-4 col-sm-4 search-input">
                    <%= button_tag "", class: "btn btn-custom btn-block btn-lg" do %>
                    <i class="fa fa-search"></i>
                    <% end %>
                </div>
                <div class="col-md-4 col-sm-4 search-input">
                </div>
            <% end %>
        </div>
    </div>
</section>