			<label>Age</label>
			<%= client_field.text_field :age, placeholder: 'Age', class: 'form-control' %>		
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<label>Ville</label>
			<%= client_field.text_field :ville, placeholder: 'Ville', class: 'form-control' %>		
		</div>
		<div class="col-md-6">
